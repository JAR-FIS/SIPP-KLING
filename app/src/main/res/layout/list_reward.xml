<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/peringkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peringkat ke"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nmrPeringkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-7dp"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@id/peringkat"
                android:text="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/peringkat"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="Siti Badriah"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama"
                android:text="Kec." />

            <TextView
                android:id="@+id/kecamatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/kec"
                android:text="Cilodong" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/koma"
                android:text=","
                android:layout_toEndOf="@id/kecamatan"
                android:layout_below="@id/nama"/>

            <TextView
                android:id="@+id/kel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/koma"
                android:text="Kel." />

            <TextView
                android:id="@+id/kelurahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/kel"
                android:text="Kalimulya" />

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:id="@+id/wrapJumlah"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/jumlahData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="298"
                    android:textColor="@color/putih"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kali"
                    android:textColor="@color/putih"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wrapJumlah"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-5dp"
                    android:text="Mensubmit Data"
                    android:textColor="@color/putih"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>