<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/colorAccent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="55dp"
        android:contentDescription="@string/desc_app"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="260dp"
        android:paddingEnd="50dp"
        android:paddingStart="50dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rectangle_login"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_person_outline_white_24dp"
            android:hint="@string/uname"
            android:inputType="textEmailAddress"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/putih"
            android:textColorHint="@color/Abu" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_login"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_lock_outline_white_24dp"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/putih"
            android:textColorHint="@color/Abu" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/pass"
            android:layout_marginTop="25dp"
            android:background="@drawable/rectangle_green"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:text="@string/login"
            android:textColor="#fff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogin"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum punya akun?"
                android:textColor="@color/putih" />

            <TextView
                android:id="@+id/daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/daftar"
                android:layout_toEndOf="@id/txt1"
                android:textColor="@color/putih" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
