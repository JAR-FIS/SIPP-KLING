<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/titleNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Pendataan"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/hal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/titleNotif"
                android:textStyle="bold"
                android:text="Perihal : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/perihal"
                android:layout_toEndOf="@id/hal"
                android:text="Pengumuman"
                android:layout_below="@id/titleNotif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:layout_below="@id/titleNotif"
                android:layout_alignParentEnd="true"
                android:text="02/02/2018"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>